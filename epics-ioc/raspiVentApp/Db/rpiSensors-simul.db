# Fanout Proc records
record(fanout, "$(P)$(R)TIME-FNOUT"){
    field(LNK1, "$(P)$(R)Sensor-Pressure")
    field(LNK2, "$(P)$(R)Sensor-Flow")
#    field(LNK3, "$(P)$(R)TMPump1-Acceleration")
#    field(LNK4, "$(P)$(R)TMPump1-NormalOperation")
}
record(calc,"$(P)$(R)Sensor-Pressure"){
    field(DESC,"Input Air pressure ")
    field(PREC,"3")
    field(INPA, "$(P)$(R)TIME-COUNTER")
    field(INPB, "$(P)$(R)PEEP")
    field(CALC, "(A<=0.5)? -A : ((A<3.0)? 0 : B)")
    field(EGU,"cmH2O")
    field(HOPR,"30")
    field(LOPR,"0")
    field(HIHI,"30")
    field(HIGH,"25")
    field(LOW,"2")
    field(LOLO,"1")
}
record(calc,"$(P)$(R)Sensor-Resp-Rate"){
    field(DESC,"Respiration Rate Sensor")
    field(EGU,"b/min")
    field(VAL,"12")
    field(HOPR,"20")
    field(LOPR,"2")
    field(HIHI,"18")
    field(HIGH,"7")
    field(LOW,"4")
    field(LOLO,"2")
    field(PINI,"YES")
    field(FLNK, "$(P)$(R)RR-MAXTIME" )
}
record(ai,"$(P)$(R)Sensor-FiO2"){
    field(DESC,"O2 Concentration Sensor")
    field(EGU,"%")
    field(VAL,"50")
# Drive High /Low
    field(HOPR,"100")
    field(LOPR,"20")
}
record(ai,"$(P)$(R)Sensor-PEEP"){
    field(DESC,"Positive End Expiratory Pressure Sensor")
    field(PREC,"0")
    field(EGU,"cmH2O")
    field(VAL,"5.0")
# Drive High /Low
    field(HOPR,"20")
    field(LOPR,"2")
}
record(ai,"$(P)$(R)Sensor-Tidal-Volume"){
    field(DESC,"Tidal Volume Sensor")
    field(PREC,"0")
    field(EGU,"ml")
    field(VAL,"400.0")
# Drive High /Low
    field(HOPR,"1400")
    field(LOPR,"200")
    field(HIGH,"800")
    field(LOW,"100")
}
record(ai,"$(P)$(R)Sensor-Tidal-Volume-Expiration"){
    field(DESC,"Tidal Volume Expiration Sensor")
    field(PREC,"0")
    field(EGU,"ml")
    field(VAL,"400.0")
# Drive High /Low
    field(HOPR,"1400")
    field(LOPR,"200")
    field(HIGH,"800")
    field(LOW,"100")
}
